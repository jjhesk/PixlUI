<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.TextGearedSlab">
        <item name="typeface">GearedSlab.ttf</item>
    </style>


    <style name="AppTheme.TextGearedSlab.t1">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme.TextGearedSlab.t2">
        <item name="android:textSize">14sp</item>
    </style>



    <style name="AppTheme.TextOswaldRegular">
        <item name="typeface">Oswald_Regular.ttf</item>
    </style>

    <style name="AppTheme.TextOswaldRegular.t1">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme.TextOswaldRegular.t2">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
